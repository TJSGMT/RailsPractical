<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>
<%= form_for @customer, remote: false do |f| %>
  <h4><%= f.label :first_name, class: "form-label" %></h4>
  <p><%= f.text_field :fname, class: "form-control" %></p><br>
  <h4><%= f.label :last_name, class: "form-label"%></h4>
  <h4><%= f.text_field :lname, class: "form-control" %></h4><br>
  <h4><%= f.label :email, class: "form-label" %></h4>
  <h4><%= f.text_field :email, class: "form-control" %></h4> <br>
  <h4><%= f.label :phone_number, class: "form-label" %></h4>
  <h4><%= f.text_field :phone_number, class: "form-control" %></h4> <br>
  <h4><%= f.submit class: "btn btn-primary"  %></h4>
<% end %>
