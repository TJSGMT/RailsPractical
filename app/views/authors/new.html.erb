<% if flash[:notice] %>

<%= flash[:notice] %>

<% end %>


<%= form_for @author, remote: false do |f| %>

<h2><%= f.label :first_name %></h2>

<p><%= f.text_field :first_name %></p><br>

<h2><%= f.label :last_name%></h2>

<h2><%= f.text_field :last_name %></h2><br>

<h2><%= f.label :date %></h2>

<h2><%= f.date_select :dob, start_year: 1800, end_year: Time.now.year %></h2> <br>

<h2><%= f.label :email %></h2>

<h2><%= f.text_field :email %></h2> <br>

<h2><%= f.submit %></h2>

<% end %>