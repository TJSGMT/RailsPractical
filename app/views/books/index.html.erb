<div class="d-flex  align-items-center  justify-content-center">
<h1> Book Index</h1>
 </div>   <br><br>



 <table class="table  table-hover">
  <thead>
    <tr>
      <th scope="col">Book name</th>
      <th scope="col">Book price</th>
     
      <th></th>

    </tr>
  </thead>
  <tbody>
   <% @books.each do |book|%>
    <tr> 
      <th scope="row"><%=book.name%></th>
      <td><%=book.price%></td>
      
      <td><button type="button" class="btn btn-link"><%= link_to "Show", book_path(book), class:"btn btn-primary", method: :get %></button>
            <button type="button" class="btn btn-link"><%= link_to " Edit", edit_book_path(book), class:"btn btn-primary", method: :get %></button>
            <button type="button" class="btn btn-link"><%= button_to " Destroy", book_path(book), class:"btn btn-primary", method: :delete %></button>
      </td>

    </tr>
    <%end%>
  </tbody>
</table><br>

