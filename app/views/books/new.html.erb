<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>
<%= form_for @book, remote: false do |f| %>
<h2><%= f.label :name %></h2>
<p><%= f.text_field :name %></p><br>
<h2><%= f.label :price%></h2>
<h2><%= f.text_field :price %></h2><br>
<%= f.label :author%>
    <%= f.select :author_id, Author.all.map { |t| [t.first_name+ " " +t.last_name, t.id]}%>
<h2><%= f.submit %></h2>
<% end %>
