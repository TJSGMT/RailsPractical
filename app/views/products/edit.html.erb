<h1>Products Edit Form</h1>
<% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
        <p style="color: red"><%= error%></p>
    <%end%> 
<%end%>
<%= form_for @product do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name%><br>
    <%= f.label :brand_name%>
    <%= f.text_field :brand_name%>
<br>
    <%= f.submit%>
<%end%>
