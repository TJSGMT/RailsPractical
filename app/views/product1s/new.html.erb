<% if flash[:errors] %>
  <%= flash[:errors] %>
<% end %>
<%= form_for @product1, remote: false do |f| %>
  <h4><%= f.label :title, class: "form-label" %></h4>
  <p><%= f.text_field :title, class: "form-control" %></p><br>
  <h4><%= f.label :Description, class: "form-label"%></h4>
  <h4><%= f.text_field :description, class: "form-control" %></h4><br>
  <h4><%= f.label :Price, class: "form-label" %></h4>
  <h4><%= f.text_field :price, class: "form-control" %></h4> <br>
  <h4><%= f.label :Capacity, class: "form-label" %></h4>
  <h4><%= f.text_field :capacity, class: "form-control" %></h4> <br>
  <h4><%= f.label :is_active, class: "form-label" %></h4>
  <%= f.check_box :is_active%>
  <h4><%= f.label :Status, class: "form-label" %></h4>
  <h5><%= f.select :status, (Product1.statuses.keys),class: "form-control" %></h5> <br>
  <h4><%= f.submit class: "btn btn-primary"  %></h4>
<% end %>
